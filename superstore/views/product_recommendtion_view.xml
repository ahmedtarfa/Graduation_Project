<odoo>

    <record id="action_product_recom" model="ir.actions.act_window">
        <field name="name">My Recommndtion Model</field>
        <field name="res_model">my.recom.model</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--    <record id="model_product_recom" model="ir.model">-->
<!--        <field name="name">my.recom.model</field>-->
<!--        <field name="model">my.recom.model</field>-->
<!--    </record>-->

     <record id="view_product_recom_tree" model="ir.ui.view">
        <field name="name">my.recom.model.tree</field>
        <field name="model">my.recom.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
                <field name="recom_result"/>
            </tree>
        </field>
    </record>

    <record id="view_product_recom_form" model="ir.ui.view">
        <field name="name">my.recom.model.form</field>
        <field name="model">my.recom.model</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_recom"
                            string="Recommendation"
                            type="object"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="user_id"/>
                    </group>
                    <group>
                        <field name="recom_result" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>