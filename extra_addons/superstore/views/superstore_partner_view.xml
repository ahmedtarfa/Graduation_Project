<odoo>
    <record id="view_superstore_partner_form" model="ir.ui.view">
        <field name="name">superstore.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="after">
                <group>
                    <field name="x_segement"/>
                    <field name="x_region"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>