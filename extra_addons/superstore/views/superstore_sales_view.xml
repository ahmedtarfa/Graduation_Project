<odoo>
    <record id="view_superstore_sale_order_form" model="ir.ui.view">
        <field name="name">superstore.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <group>
                    <field name="x_orderid"/>
                    <field name="x_discount"/>
                    <field name="x_profit"/>
                    <field name="x_rate"/>
                    <field name="x_review"/>
                    <field name="x_shipmode"/>
                    <field name="x_shipdate"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
